source 'http://rubygems.org'

gem 'rails', '4.0.1.rc1'

# Ruby standart library
gem 'rubysl'

# Server
gem 'puma'

# Database
gem 'pg'
gem 'kaminari'
gem 'redis'
gem 'dalli'
gem 'tire'
gem 'friendly_id'

# Auth
gem 'devise'

# Templates
gem 'slim'

# Files upload
gem 'carrierwave'

# Localization
gem 'russian'

# Jobs
gem 'resque'

# Configuration
gem 'custom_configuration'

# JSON
gem 'rabl'
gem 'oj' # very fast json, very!

group :development do
  gem 'capistrano', require: false
  gem 'bullet'
  gem 'better_errors'
  gem 'awesome_print'
  gem 'rails-pry'
end

group :test do
  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem 'database_cleaner'
  gem 'timecop'
end

# Assets
gem 'sass-rails'
gem 'coffee-rails'
gem 'uglifier'
gem 'yui-compressor'
gem 'compass-rails'