.item.upload ng-repeat="upload in folder.uploads" ng-click="toggleUploadSelection(upload)" ng-class="{selected: isSelectedUpload(upload), 'has-icon': upload.iconUrl}" ddragable="upload"
  .icon
    img ng-src="{{upload.icon('#{icon_type}')}}"
  .name
    | {{upload.name}}
  .menu stop-propagation="click"
    a.action.download href="" ng-click="download(upload)" title=t('.download')
    - if self? @user
      a.action.item-settings href="" ng-click="loadPermissions(upload)" title=t('.settings')
      a.action.lock href="" ng-click="setPassword(upload)" title=t('.set_password')
      a.action.unlock href="" ng-click="deletePassword(upload)" ng-show="upload.locked" title=t('.delete_password')
      a.action.play href="" ng-click="playAudio(upload)" ng-show="upload.playable" title=t('.play')
  .progress ng-show="upload.isUploading()" = "#{t '.progress'}: {{upload.percent}}"